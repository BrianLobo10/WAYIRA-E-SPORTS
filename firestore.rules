rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios: permitir lectura para verificar si existe un usuario por puuid durante registro
    // Escritura solo propia o durante creación de cuenta
    match /users/{userId} {
      // Permitir lectura para verificar si un puuid ya está registrado
      allow read: if true;
      // Permitir escritura durante registro (cuando no hay auth) o cuando el usuario escribe su propio perfil
      allow create: if true;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Posts: lectura pública, escritura autenticada
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.authorId == request.auth.uid);
    }
    
    // Mensajes: solo entre usuarios autenticados
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.fromId == request.auth.uid || 
         resource.data.toId == request.auth.uid);
    }
    
    // Torneos: lectura pública, escritura solo admin
    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Noticias: lectura pública para todos (solo publicadas), escritura solo admin
    match /news/{newsId} {
      // Permitir lectura pública de noticias publicadas
      allow get: if resource.data.published == true;
      // Permitir listar noticias públicamente (el servicio filtra por published == true)
      // Firestore evaluará la regla 'get' para cada documento devuelto por la query
      allow list: if true;
      // Permitir lectura completa (incluyendo borradores) solo para admins
      allow get, list: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create, update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Mensajes de contacto: lectura solo admin, escritura pública
    match /contactMessages/{messageId} {
      allow read: if request.auth != null;
      allow create: if true; // Permitir a cualquiera crear mensajes de contacto
      allow update, delete: if request.auth != null;
    }
    
    // Notificaciones: lectura y escritura solo para el usuario propietario
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}

